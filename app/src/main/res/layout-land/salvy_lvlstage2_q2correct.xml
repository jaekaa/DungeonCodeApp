<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/salvy_storybg7correct" />

    <!-- Hearts Container (Three Hearts) -->
    <LinearLayout
        android:id="@+id/heartsContainer"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/heart1"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hart_lives" />

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hart_lives" />

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hart_lives" />
    </LinearLayout>

    <ImageView
        android:id="@+id/textCorrect"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/salvy_q2correct" />

    <!-- Salvy's Dialogue -->
    <ImageView
        android:id="@+id/dialoguePlate"
        android:layout_width="655dp"
        android:layout_height="155dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundImage"
        app:srcCompat="@drawable/salvy_dialogueq1correct" />

</androidx.constraintlayout.widget.ConstraintLayout>
